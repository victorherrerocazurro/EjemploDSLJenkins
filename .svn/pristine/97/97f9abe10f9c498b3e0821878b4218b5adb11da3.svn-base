<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>parejas</groupId>
	<artifactId>negocio</artifactId>
	<version>0.0.2</version>
	<properties>
		<svn.username>UserNegocio</svn.username>
		<svn.password>UserNegocio</svn.password>
	</properties>
	<scm>
		<connection>  
            scm:svn:https://Victor-Portatil/svn/ParejasNegocio/tags/negocio-0.0.2
        </connection>
		<developerConnection>  
            scm:svn:https://Victor-Portatil/svn/ParejasNegocio/tags/negocio-0.0.2
        </developerConnection>
		<url>  
            https://Victor-Portatil/svn/ParejasNegocio/tags/negocio-0.0.2
        </url>
	</scm>
	<build>
		<sourceDirectory>src</sourceDirectory>
		<testSourceDirectory>test</testSourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.10</version>
				<configuration>
					<excludes>
						<exclude>**/integracion/*.java</exclude>
					</excludes>
					<includes>
						<include>**/unitarios/*.java</include>
					</includes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-failsafe-plugin</artifactId>
				<version>2.17</version>
				<configuration>
					<excludes>
						<exclude>**/unitarios/*.java</exclude>
					</excludes>
					<includes>
						<include>**/integracion/*.java</include>
					</includes>
				</configuration>
				<executions>
					<execution>
						<phase>integration-test</phase>
						<goals>
							<goal>integration-test</goal>
							<goal>verify</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
					<preparationGoals>clean install</preparationGoals>
					<username>${svn.username}</username>
					<password>${svn.password}</password>
					<tagBase>
						https://Victor-Portatil/svn/ParejasNegocio/tags
					</tagBase>
				</configuration>
			</plugin>
